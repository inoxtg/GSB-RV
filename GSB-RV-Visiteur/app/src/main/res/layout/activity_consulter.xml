<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:visibility="visible">
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_img_3"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/nomVisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:text="NOM"
                android:textColor="#96ffffff"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/prenomVisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:text="prenom"
                android:textColor="#96ffffff"
                android:textSize="16sp"/>
        <Button
                android:onClick="retour"
                android:background="@drawable/ic_retour_green_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/btnRetour"/>
        <Button
                android:onClick="seDeconnecter"
                android:background="@drawable/log_out_green"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/btnSeDeconnecter"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="150dp">
        <ListView
                android:id="@+id/lvRapports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="#96ffffff"
                android:dividerHeight="1dp"
                android:clickable="true"
                android:footerDividersEnabled="false"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#96ffffff"
                android:theme="@style/EditScreenTextInputLayoutStyle">
            <DatePicker
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/datePicker"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
                android:onClick="validerDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonshapewhitebg"
                android:fontFamily="@font/calibri"
                android:text="@string/valider"
                android:textAllCaps="false"
                android:textColor="#96ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/btnValider"/>
    </LinearLayout>
</RelativeLayout>