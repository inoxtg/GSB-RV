<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:visibility="visible">
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_img_3"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
            android:id="@+id/nomVisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:text="NOM"
            android:textColor="#96ffffff"
            android:textSize="16sp"/>
    <TextView
            android:id="@+id/prenomVisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:text="prenom"
            android:textColor="#96ffffff"
            android:textSize="16sp"/>
    <Button
            android:onClick="retour"
            android:background="@drawable/ic_retour_green_24"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btnRetour"/>
    <Button
            android:onClick="seDeconnecter"
            android:background="@drawable/log_out_green"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btnSeDeconnecter"/>
    </LinearLayout>
</RelativeLayout>